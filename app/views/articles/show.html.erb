<h1>
  <%= @article.title %>
<%= link_to edit_article_path(@article) do %>
  <i class="fa fa-pencil"></i>
<% end %>
<%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"text-secondary ms-2" do %>
   <i class="fa-solid fa-trash-can" style="color:#0B58CA"></i>
<% end %>
</h1>

<div class="article-content">
  <%= @article.content.html_safe %>
</div>
